<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <!--ImageView的作用只是为了显示一张背景图，从而让界面变得更加美观，和主体功能无关-->
    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg_place" />

    <LinearLayout
        android:id="@+id/actionBarLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"
        android:background="@color/main"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape_search_bg">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/zu142"/>
            <!--EditText 用于给用户提供一个搜索框，这样用户就可以在这里搜索任意城市-->
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/EditMessage"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_query"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/query"
            android:background="@drawable/shape_query"/>
    </LinearLayout>

    <!--RecyclerView则主要用于对搜索出来的结果进行展示-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBarLayout"
        android:visibility="gone"/>

</RelativeLayout>